<div class="contents row">
 <div class="container">
  <%= form_for [@notice] do |f| %>        
            <div style="margin: 8px 0">
                <%= f.label :タイトル, style: { 'margin-right' => 8 } %>
                <%= f.text_field :title, placeholder: 'title', value: '' %>
            </div>
        
            <div style="margin: 8px 0">
                <%= f.label :気づいたこと, style: { 'margin-right' => 8 } %>
                <%= f.text_area :notice, placeholder: 'notice', style: 'width: 90%; height: 300px;' %>
            </div>
            
            <div class="field">
                <%= f.file_field :image %>
            </div>
        
            <div class="row">
                <div class="col10 push1">
                  <%= button_tag type: "submit", class: "btn btn--block" do %>
                  投稿する<i class="icon-arrow-right"></i>
                  <% end %>
                </div>
            </div>        
        <% end %>
 </div>
</div>